<form 
    class="needs-validation" 
    action="{{ url_for('api.home_views.login') }}"
    method="post">
    <h1>Kilowatt Kate Insight</h1>
    <h2 class="h4 mb-5 fw-normal">Prijavite se</h2>
    {{ form.csrf_token }} 
    <div class="row mb-2">
        {{ render_partial('shared/form_field.jinja2', fwidth=12, mode='add', field=form.email)}}
    </div>
    <div class="row mb-2">
        {{ render_partial('shared/form_field.jinja2', fwidth=12, mode='add', field=form.password)}}
    </div>
    <div class="row mb-5">
        <div class="col-md-12">
            {{ form.remember_me }} Ostani prijavljen
        </div>
    </div>
    <button class="w-100 btn btn-lg btn-secondary" type="submit">Prijavi se</button>
    <p class="mt-5 mb-3 text-muted">BISOL Energija &copy; 2023-2025</p>
</form>