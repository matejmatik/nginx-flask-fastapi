<header class="navbar navbar-expand-md border-bottom my-box-shadow">
    <div class="container d-flex justify-content-center align-items-center w-100">
        <div class="col-md-3">
        {% if user.is_authenticated %}
            <button 
                class="btn custom-toggler"
                type="button" 
                id="navbar-toggler my-toggler"
                title="Meni aplikacije" 
                data-bs-toggle="offcanvas" 
                data-bs-target="#offcanvasNavbar" 
                aria-controls="offcanvasNavbar" 
            >
                <span class="bi bi-list"></span>
            </button>
        {% endif %}
        </div>
        <div class="col-md-6">
            {% if user.is_authenticated %}
            <a class="navbar-brand d-flex align-items-center justify-content-center" href="{{ url_for('api.home_views.index') }}">
                <img id="logo" src="{{ url_for('static', filename='./img/BE_logo_dark.svg') }}" width="auto" height="50" style="padding: 0"  alt="BISOL logo">
            </a>
            {% else %}
            <a class="navbar-brand d-flex align-items-center justify-content-center" href="{{ url_for('api.home_views.login') }}">
                <img id="logo" src="{{ url_for('static', filename='./img/BE_logo_dark.svg') }}" width="auto" height="50" style="padding: 0"  alt="BISOL logo">
            </a>
            {% endif %}
        </div>
        <div class="col-md-3 d-flex justify-content-end dropdown">
        {% if user.is_authenticated %}
            <!-- add search button -->
            <button class="btn" type="button" title="BISOL Energija iskanje (ALT+SHIFT+F)" data-bs-toggle="modal" data-bs-target="#BESearch">
                <span class="bi bi-search h3"></span>
            </button>
            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="Uporabnik">
                <span class="bi bi-person-circle h3"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li class="dropdown-item"> {{ user.name }} </li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="{{url_for('api.home_views.logout')}}">Odjava</a></li>
            </ul>
        {% endif %}
        </div>
    </div>
</header>
